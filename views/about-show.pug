extends layout

block content
  div(class='single-news-bar')
    div(class='picture-news-bar p-3')
      img(src=`/images/media/${data.picture}`, alt="")
    div(class='title-news-bar p-3')
      h3=data.title
    div(class='text-news-bar p-3')
      p=data.articleText
      p(class='author-sign')=data.author


