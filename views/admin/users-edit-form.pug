extends ../layout

block content
  div(class='admin-index-bar row m-0')
    div(class='menu-column col-2 py-3')
        div(class='user-info-bar') 
          p(class='username-bar') #{userName} #{userSurname}
            img(src=`/images/avatars/${userAvatar}.jpg`, alt="" class='user-avatar')
        div(class='buttons-bar p-3')
          button(class='btn btn-primary w-100 my-1')
            +menuItem('About', '/admin/about-list')
          button(class='btn btn-primary w-100 my-1')
            +menuItem('News', '/admin/news-list')
          button(class='btn btn-primary w-100 my-1')
            +menuItem('Project', '/admin/project-list')
          button(class='btn btn-primary w-100 my-1')
            +menuItem('Quizes', '/admin/quizes-list')
          button(class='btn btn-info w-100 my-1')
            +menuItem('Users', '/admin/users-list')
          button(class='btn btn-info w-100 my-1')
            +menuItem('Media', '/admin/media-list')
          button(class='btn btn-info w-100 my-1')
            +menuItem('Settings', '/admin/settings-list')
    div(class='content-column col-10 py-5')
      h3(class='title-admin-page') #{title}
      if errors.errors !== undefined 
          each message in errors.errors 
            p(class='validation-alert')=message
      form(action='/admin/users/update' method='post')
        div(class='row m-0')
          div(class='col')
            div(class='mb-3')
              label(class='form-label mx-2') ID:
              input(type='text' name='id' class='form-control' value=data.id || '' readonly)
            div(class='mb-3')
              label(class='form-label mx-2') Nick:
              input(type='text' name='nick' class='form-control' value=data.nick || '' )
            div(class='mb-3')
              label(class='form-label mx-2') ImiÄ™:
              input(type='text' name='name' class='form-control' value=data.name || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Nazwisko:
              input(type='text' name='surname' class='form-control' value=data.surname || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Email:
              input(type='text' name='email' class='form-control' value=data.email || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Password:
              input(type='password' name='password' class='form-control' value=data.password || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Avatar:
              input(type='text' name='avatar' class='form-control' value=data.avatar || '' )
          div(class='col')
            div(class='mb-3')
              label(class='form-label mx-2') Adres:
              input(type='text' name='adres' class='form-control' value=data.adres || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Kod:
              input(type='text' name='kod' class='form-control' value=data.kod || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Miasto:
              input(type='text' name='city' class='form-control' value=data.city || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Telefon:
              input(type='text' name='phone' class='form-control' value=data.phone || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Mobile:
              input(type='text' name='mobile' class='form-control' value=data.mobile || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Fax:
              input(type='text' name='fax' class='form-control' value=data.fax || '' )
            button(type='submit' class='btn btn-primary') Zapisz


