extends ../layout

block content
  div(class='admin-index-bar row m-0')
    div(class='menu-column col-2 py-5')
      div(class='user-info-bar') 
        p(class='username-bar') #{userName} #{userSurname}
          img(src=`/images/media/${userAvatar}`, alt="" class='user-avatar')
      div(class='buttons-bar p-3')
        button(class='btn btn-primary w-100 my-1')
          +menuItem('About', '/admin/about-list')
        button(class='btn btn-primary w-100 my-1')
          +menuItem('News', '/admin/news-list')
        button(class='btn btn-primary w-100 my-1')
          +menuItem('Project', '/admin/project-list')
        button(class='btn btn-primary w-100 my-1')
          +menuItem('Quizes', '/admin/quizes-list')
        button(class='btn btn-info w-100 my-1')
          +menuItem('Users', '/admin/users-list')
        button(class='btn btn-info w-100 my-1')
          +menuItem('Media', '/admin/media-list')
        button(class='btn btn-info w-100 my-1')
          +menuItem('Settings', '/admin/settings-list')
    div(class='content-column col-10 py-5')
      h3(class='title-admin-page') #{title}
      if errors.errors !== undefined 
          each message in errors.errors 
              p(class='validation-alert')=message
      form( method='post' enctype='multipart/form-data')
        div(class='row m-0')
          div(class='col')
            h3(class='py-3') Dane logowania
            div(class='mb-3')
              label(class='form-label mx-2') Nick - Nazwa użytkownika:
              input(type='text' name='nick' class='form-control' value=body.nick || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Imię:
              input(type='text' name='name' class='form-control' value=body.name || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Nazwisko:
              input(type='text' name='surname' class='form-control' value=body.surname || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Email:
              input(type='email' name='email' class='form-control' value=body.surname || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Password:
              input(type='password' name='password' class='form-control' value=body.surname || '' )
            div(class='mb-3')
              label(for="formFile" class="form-label") Obraz avatar:
              input(class="form-control" type="file" id="formFile" name="image") 
          div(class='col')
            h3(class='py-3') Dane personalne
            div(class='mb-3')
              label(class='form-label mx-2') Adres:
              input(type='text' name='adres' class='form-control' value=body.adres || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Kod pocztowy:
              input(type='text' name='kod' class='form-control' value=body.kod || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Miasto:
              input(type='text' name='city' class='form-control' value=body.city || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Telefon:
              input(type='text' name='phone' class='form-control' value=body.phone || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Mobile:
              input(type='text' name='mobile' class='form-control' value=body.mobile || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Fax:
              input(type='text' name='fax' class='form-control' value=body.fax || '' )
            div(class='mb-3')
              label(class='form-label mx-2') Zgadzam się z regulaminem:
              input(class="form-check-input" type="checkbox" name='rulacc' value="true" id="flexCheckDefault")
            a(href="/admin/news-list")
              button(class='btn btn-block btn-secondary mx-1' type='button') Anuluj
            button(type='submit' class='btn btn-primary') Dodaj